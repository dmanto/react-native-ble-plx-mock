{
  "name": "react-native-ble-plx-mock",
  "version": "0.2.2-beta.3",
  "description": "ðŸ”Œ Mock implementation of react-native-ble-plx for testing. Simulate BLE devices, control responses, and accelerate development without physical hardware.",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs",
    "coverage": "c8 --reporter=text-lcov > coverage.lcov",
    "type-check": "tsc --noEmit",
    "test": "npm run test:node && npm run test:jest",
    "test:node": "c8 --reporter=lcov --reporter=text tsx --test tests/*.node.test.ts",
    "test:jest": "jest",
    "prepack": "npm run build && npm test",
    "release": "standard-version",
    "release:alpha": "standard-version --prerelease alpha",
    "release:beta": "standard-version --prerelease beta",
    "release:final": "standard-version --release-as minor",
    "view-coverage": "c8 report --reporter=text"
  },
  "peerDependencies": {
    "react-native-ble-plx": "^3.x"
  },
  "keywords": [
    "react-native",
    "ble",
    "bluetooth",
    "mock",
    "testing"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmanto/react-native-ble-plx-mock.git"
  },
  "author": "Daniel Mantovani",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dmanto/react-native-ble-plx-mock/issues"
  },
  "homepage": "https://github.com/dmanto/react-native-ble-plx-mock#readme",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/react-native": "^0.72.8",
    "c8": "^10.1.3",
    "jest": "^30.0.5",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.4.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "c8": {
    "check-coverage": true,
    "lines": 50,
    "functions": 40,
    "branches": 30,
    "statements": 50
  }
}
